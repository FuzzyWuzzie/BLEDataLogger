<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Inverse" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

    <style name="AppTheme.LogText" parent="AppTheme.Base">
        <item name="android:background">@color/primary_material_light</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
